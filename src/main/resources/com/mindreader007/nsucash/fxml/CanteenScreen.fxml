<AnchorPane fx:id="contentArea" prefHeight="720.0" prefWidth="926.0" style="-fx-background-color: #d1dbe4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mindreader007.nsucash.controller.CanteenScreen">
   <children>
      <BorderPane layoutX="13.0" layoutY="20.0" prefHeight="680" prefWidth="900" style="-fx-background-color: transparent;">
         <top>
            <ToolBar style="-fx-background-radius: 20;">
               <items>
                  <Label alignment="CENTER" prefHeight="32.0" prefWidth="887.0" style="-fx-font-size: 22px; -fx-font-weight: bold;" text="Canteen" textFill="#061742">
                     <font>
                        <Font name="Arial Rounded MT Bold" size="12.0" />
                     </font>
                  </Label>
               </items>
               <BorderPane.margin>
                  <Insets bottom="5.0" />
               </BorderPane.margin>
            </ToolBar>
         </top>
         <center>
            <SplitPane dividerPositions="0.6" orientation="HORIZONTAL" style="-fx-background-radius: 20;">
               <items>
                  <AnchorPane>
                     <children>
                        <VBox spacing="8" AnchorPane.bottomAnchor="8" AnchorPane.leftAnchor="8" AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
                           <children>
                              <Label text="Available Food" textFill="#061742">
                                 <font>
                                    <Font name="Arial Rounded MT Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets left="5.0" />
                                 </padding>
                              </Label>
                              <TableView fx:id="availableFoodListTable" focusTraversable="false" prefHeight="520" prefWidth="520" style="-fx-background-radius: 0 0 20 20;">
                                 <columns>
                                    <TableColumn fx:id="idColumn" prefWidth="95.0" text="Id" />
                                    <TableColumn fx:id="nameColumn" prefWidth="292.0" text="Name" />
                                    <TableColumn fx:id="priceColumn" prefWidth="131.0" text="Price" />
                                 </columns>
                                 <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                 </columnResizePolicy>
                              </TableView>
                              <HBox spacing="8">
                                 <children>
                                    <Button fx:id="btnAdd" stylesheets="@../css/Button.css" text="Add Selected" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
                  <AnchorPane>
                     <children>
                        <VBox spacing="8" AnchorPane.bottomAnchor="8" AnchorPane.leftAnchor="8" AnchorPane.rightAnchor="8" AnchorPane.topAnchor="8">
                           <children>
                              <Label text="Selected Food" textFill="#061742">
                                 <font>
                                    <Font name="Arial Rounded MT Bold" size="12.0" />
                                 </font>
                                 <padding>
                                    <Insets left="5.0" />
                                 </padding>
                              </Label>
                              <ListView fx:id="selectedItemListView" focusTraversable="false" prefHeight="420" style="-fx-background-radius: 20;" />
                              <HBox spacing="8">
                                 <children>
                                    <Label fx:id="totalAmountLabel" text="Total: 0 BDT" textFill="#061742">
                                       <font>
                                          <Font name="Arial Rounded MT Bold" size="12.0" />
                                       </font>
                                    </Label>
                                    <Pane HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnRemove" stylesheets="@../css/Button.css" text="Remove Selected" />
                                 </children>
                              </HBox>
                              <HBox layoutX="10.0" layoutY="461.0" spacing="8">
                                 <children>
                                    <Pane HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnPay" stylesheets="@../css/Button.css" text="Proceed to Pay" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                  </AnchorPane>
               </items>
            </SplitPane>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
